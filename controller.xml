<?xml version="1.0" encoding="UTF-8"?>

<site-conf xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://ofbiz.apache.org/Site-Conf" xsi:schemaLocation="http://ofbiz.apache.org/Site-Conf http://ofbiz.apache.org/dtds/site-conf.xsd">
    <!-- The controller elements that are common to all OFBiz components
         can be found in the following xml file. A component can override the
         elements found in the common-controller.xml file. -->
    <include location="component://common/webcommon/WEB-INF/common-controller.xml"/>
    <request-map uri="main"><security https="true" auth="true"/><response name="success" type="view" value="main"/></request-map>
    
    <request-map uri="createPersonRecordByJavaService">
        <security https="true" auth="true"/>
        <event type="service" invoke="createPersonRecordByJavaService"/>
        <response name="success" type="view" value="AddPersonRecordFTL"/>
    </request-map>

    <request-map uri="createPersonRecordByGroovyService">
        <security https="true" auth="true"/>
        <event type="service" invoke="createPersonRecordByGroovyService"/>
        <response name="success" type="view" value="main"/>
    </request-map>

    <request-map uri="createPersonRecordByXmlService">
        <security https="true" auth="true"/>
        <event type="service" invoke="createPersonRecordByXmlService"/>
        <response name="success" type="view" value="main"/>
    </request-map>

    <request-map uri="createPersonEntity">
        <security https="true" auth="true"/>
        <event type="service" invoke="createPersonEntity"/>
        <response name="success" type="view" value="AddPersonRecordFTL"/>
    </request-map>

    <request-map uri="FindOfbizDemo"><security https="true" auth="true"/><response name="success" type="view" value="FindOfbizDemo"/></request-map>

    <request-map uri="AddOfbizDemoFtl">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="AddOfbizDemoFtl"/>
    </request-map>

     <request-map uri="CustomerDemoFtl">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="CustomerDemoFtl"/>
    </request-map>

    <request-map uri="createOfbizDemoEvent">
        <security https="true" auth="true"/>
        <event type="java" path="com.hotwax.ofbizdemo.events.OfbizDemoEvents" invoke="createOfbizDemoEvent"/>
        <response name="success" type="view" value="main"/>
        <response name="error" type="view" value="main"/>
    </request-map>

    <request-map uri="createCustomerDemoFtl">
        <security https="true" auth="true"/>
        <response name="success" type="view" value="createCustomerDemoFtl"/>
    </request-map>

    <request-map uri="createCustomerDemoEvent">
        <security https="true" auth="true"/>
        <event type="java" path="com.hotwax.ofbizdemo.events.customerDemoEvent" invoke="createCustomerDemoEvent"/>
        <response name="success" type="view" value="createCustomerDemoFtl"/>
        <response name="error" type="view" value="createCustomerDemoFtl"/>
    </request-map>

    <!-- View Mappings -->
    <view-map name="main" type="screen" page="component://ofbizDemo/widget/OfbizDemoScreens.xml#main"/>
    <view-map name="FindOfbizDemo" type="screen" page="component://ofbizDemo/widget/OfbizDemoScreens.xml#FindOfbizDemo"/>
    <view-map name="AddOfbizDemoFtl" type="screen" page="component://ofbizDemo/widget/OfbizDemoScreens.xml#AddOfbizDemoFtl"/>

    <view-map name="CustomerDemoFtl" type="screen" page="component://ofbizDemo/widget/OfbizDemoScreens.xml#CustomerDemoFtl"/>
    <view-map name="createCustomerDemoFtl" type="screen" page="component://ofbizDemo/widget/OfbizDemoScreens.xml#createCustomerDemoFtl"/>
    <view-map name="AddPersonRecordFTL" type="screen" page="component://ofbizDemo/widget/OfbizDemoScreens.xml#AddPersonRecordFTL"/>
</site-conf>